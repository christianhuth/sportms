plugin.tx_clubms {

    persistence {
        storagePid = {$plugin.tx_clubms.persistence.storagePid}
        recursive = {$plugin.tx_clubms.persistence.recursive}
    }

    # ====================================
    # Settings available inside Controller and View by accessing $this->settings or {settings.xyz}
    # ====================================
    settings {

        club {
            listPid = {$plugin.tx_clubms.settings.club.listPid}
            showPid = {$plugin.tx_clubms.settings.club.showPid}
        }

        clubSection {
            listPid = {$plugin.tx_clubms.settings.clubSection.listPid}
            showPid = {$plugin.tx_clubms.settings.clubSection.showPid}
        }

        competition {
            listPid = {$plugin.tx_clubms.settings.competition.listPid}
            showPid = {$plugin.tx_clubms.settings.competition.showPid}
        }

        competitionSeason {
            listPid = {$plugin.tx_clubms.settings.competitionSeason.listPid}
            showPid = {$plugin.tx_clubms.settings.competitionSeason.showPid}
        }

        game {
            listPid = {$plugin.tx_clubms.settings.game.listPid}
            showPid = {$plugin.tx_clubms.settings.game.showPid}
        }

        person {
            listPid = {$plugin.tx_clubms.settings.person.listPid}
            showPid = {$plugin.tx_clubms.settings.person.showPid}
            dummyImageMale = {$plugin.tx_clubms.settings.person.dummyImageMale}
            dummyImageFemale = {$plugin.tx_clubms.settings.person.dummyImageFemale}
        }

        season {
            listPid = {$plugin.tx_clubms.settings.season.listPid}
        }

        section {
            listPid = {$plugin.tx_clubms.settings.section.listPid}
            showPid = {$plugin.tx_clubms.settings.section.showPid}
        }

        team {
            listPid = {$plugin.tx_clubms.settings.team.listPid}
            showPid = {$plugin.tx_clubms.settings.team.showPid}
        }

        teamSeason {
            listPid = {$plugin.tx_clubms.settings.teamSeason.listPid}
            showPid = {$plugin.tx_clubms.settings.teamSeason.showPid}
        }

        venue {
            listPid = {$plugin.tx_clubms.settings.venue.listPid}
            showPid = {$plugin.tx_clubms.settings.venue.showPid}
        }

    }

    view {
        cssFile = {$plugin.tx_clubms.view.cssFile}
        layoutRootPaths {
            0 = EXT:clubms/Resources/Private/Layouts/
            1 = {$plugin.tx_clubms.view.layoutRootPath}
        }
        partialRootPaths {
            0 = EXT:clubms/Resources/Private/Partials/
            1 = {$plugin.tx_clubms.view.partialRootPath}
        }
        templateRootPaths {
            0 = EXT:clubms/Resources/Private/Templates/
            1 = {$plugin.tx_clubms.view.templateRootPath}
        }
    }

}