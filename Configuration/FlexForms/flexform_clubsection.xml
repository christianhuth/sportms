<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Vereinsabteilung</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
			<settings.clubSection.uid>
				<TCEforms>
					<label>Zeige folgende Vereinsabteilung</label>
					<displayCond>FIELD:base.switchableControllerActions:=:ClubSection->show</displayCond>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tx_clubms_domain_model_clubsection</allowed>
						<size>1</size>
						<maxItems>1</maxItems>
						<minItems>0</minItems>
						<show_thumbs>1</show_thumbs>
					</config>
				</TCEforms>
			</settings.clubSection.uid>
			<settings.clubSection.showViews>
				<TCEforms>
					<label>Erlaube folgende Einzelansichten</label>
					<displayCond>FIELD:base.switchableControllerActions:=:ClubSection->show</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Officials</numIndex>
								<numIndex index="1">officials</numIndex>
							</numIndex>
							<numIndex index="3">
								<numIndex index="0">Teams</numIndex>
								<numIndex index="1">teams</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.clubSection.showViews>
			<settings.clubSection.showNavigation.enabled>
				<TCEforms>
					<label>Navigation f√ºr Einzelansichten?</label>
					<displayCond>FIELD:base.switchableControllerActions:=:ClubSection->show</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
					<onChange>reload</onChange>
				</TCEforms>
			</settings.clubSection.showNavigation.enabled>
			<settings.clubSection.showNavigation.views>
				<TCEforms>
					<label>Zeige folgende Navigationselemente</label>
					<displayCond>
						<AND>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:ClubSection->show</numIndex>
							<numIndex index="1">FIELD:clubsection.settings.clubsection.showNavigation.enabled:REQ:TRUE</numIndex>
						</AND>
					</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Officials</numIndex>
								<numIndex index="1">officials</numIndex>
							</numIndex>
							<numIndex index="3">
								<numIndex index="0">Teams</numIndex>
								<numIndex index="1">teams</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.clubSection.showNavigation.views>
		</el>
	</ROOT>
</T3DataStructure>