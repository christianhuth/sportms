<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Vereinsabteilung</sheetTitle>
		</TCEforms>
		<displayCond>
			<OR>
				<numIndex index="0">FIELD:base.switchableControllerActions:=:ClubSection->show</numIndex>
				<numIndex index="1">FIELD:base.switchableControllerActions:=:ClubSection->list</numIndex>
			</OR>
		</displayCond>
		<type>array</type>
		<el>
			<settings.clubSection.showPid>
				<TCEforms>
					<label>Vereinsabteilung (Einzelansicht)</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>pages</allowed>
						<size>1</size>
						<maxitems>1</maxitems>
						<minitems>0</minitems>
					</config>
				</TCEforms>
			</settings.clubSection.showPid>
			<settings.clubSection.showView>
				<TCEforms>
					<label>Gezeigte Einzelansicht</label>
					<displayCond>FIELD:base.switchableControllerActions:=:ClubSection->show</displayCond>
					<config>
						<type>select</type>
						<renderType>selectSingle</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Officials</numIndex>
								<numIndex index="1">officials</numIndex>
							</numIndex>
							<numIndex index="3">
								<numIndex index="0">Teams</numIndex>
								<numIndex index="1">teams</numIndex>
							</numIndex>
						</items>
					</config>
					<onChange>reload</onChange>
				</TCEforms>
			</settings.clubSection.showView>
			<settings.clubSection.listPid>
				<TCEforms>
					<label>Vereinsabteilung (Listenansicht)</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>pages</allowed>
						<size>1</size>
						<maxitems>1</maxitems>
						<minitems>0</minitems>
					</config>
				</TCEforms>
			</settings.clubSection.listPid>
			<settings.clubSection.uid>
				<TCEforms>
					<label>Zeige folgende Vereinsabteilung</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tx_clubms_domain_model_clubsection</allowed>
						<size>1</size>
						<maxItems>1</maxItems>
						<minItems>0</minItems>
						<show_thumbs>1</show_thumbs>
					</config>
				</TCEforms>
			</settings.clubSection.uid>
		</el>
	</ROOT>
</T3DataStructure>