<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
    <ROOT>
        <TCEforms>
            <sheetTitle>Person</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
            <settings.person.uid>
                <TCEforms>
                    <label>Zeige folgende Person</label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>tx_sportms_domain_model_person</allowed>
                        <size>1</size>
                        <maxItems>1</maxItems>
                        <minItems>0</minItems>
                        <show_thumbs>1</show_thumbs>
                    </config>
                </TCEforms>
            </settings.person.uid>
            <settings.person.selectbox.enabled>
                <TCEforms>
                    <label>Selectbox f√ºr Personen?</label>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.person.selectbox.enabled>
            <settings.person.persons>
                <TCEforms>
                    <label>Welche Personen sollen angezeigt werden?</label>
                    <config>
                        <foreign_table>tx_sportms_domain_model_person</foreign_table>
                        <foreign_table_where>ORDER BY lastname ASC, firstname ASC</foreign_table_where>
                        <renderType>selectMultipleSideBySide</renderType>
                        <type>select</type>
                    </config>
                </TCEforms>
            </settings.person.persons>
        </el>
    </ROOT>
</T3DataStructure>