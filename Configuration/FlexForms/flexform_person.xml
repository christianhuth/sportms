<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
    <ROOT>
        <TCEforms>
            <sheetTitle>Person</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
            <settings.person.uid>
                <TCEforms>
                    <label>Zeige folgende Person</label>
                    <displayCond>FIELD:base.switchableControllerActions:=:Person->show</displayCond>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>tx_clubms_domain_model_person</allowed>
                        <size>1</size>
                        <maxItems>1</maxItems>
                        <minItems>0</minItems>
                        <show_thumbs>1</show_thumbs>
                    </config>
                </TCEforms>
            </settings.person.uid>
            <settings.person.showViews>
                <TCEforms>
                    <label>Erlaube folgende Einzelansichten</label>
                    <displayCond>FIELD:base.switchableControllerActions:=:Person->show</displayCond>
                    <config>
                        <type>select</type>
                        <renderType>selectMultipleSideBySide</renderType>
                        <items type="array">
                            <numIndex index="0">
                                <numIndex index="0">Index</numIndex>
                                <numIndex index="1">index</numIndex>
                            </numIndex>
                            <numIndex index="2">
                                <numIndex index="0">Officials</numIndex>
                                <numIndex index="1">officials</numIndex>
                            </numIndex>
                        </items>
                    </config>
                </TCEforms>
            </settings.person.showViews>
            <settings.person.showNavigation.enabled>
                <TCEforms>
                    <label>Navigation für Einzelansichten?</label>
                    <displayCond>FIELD:base.switchableControllerActions:=:Person->show</displayCond>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                    <onChange>reload</onChange>
                </TCEforms>
            </settings.person.showNavigation.enabled>
            <settings.person.showNavigation.views>
                <TCEforms>
                    <label>Zeige folgende Navigationselemente</label>
                    <displayCond>
                        <AND>
                            <numIndex index="0">FIELD:base.switchableControllerActions:=:Person->show</numIndex>
                            <numIndex index="1">FIELD:person.settings.person.showNavigation.enabled:REQ:TRUE</numIndex>
                        </AND>
                    </displayCond>
                    <config>
                        <type>select</type>
                        <renderType>selectMultipleSideBySide</renderType>
                        <items type="array">
                            <numIndex index="0">
                                <numIndex index="0">Index</numIndex>
                                <numIndex index="1">index</numIndex>
                            </numIndex>
                            <numIndex index="2">
                                <numIndex index="0">Officials</numIndex>
                                <numIndex index="1">officials</numIndex>
                            </numIndex>
                        </items>
                    </config>
                </TCEforms>
            </settings.person.showNavigation.views>
            <settings.person.persons>
                <TCEforms>
                    <label>Welche Personen sollen angezeigt werden?</label>
                    <displayCond>FIELD:base.switchableControllerActions:=:Person->list</displayCond>
                    <config>
                        <foreign_table>tx_clubms_domain_model_person</foreign_table>
                        <foreign_table_where>ORDER BY lastname ASC, firstname ASC</foreign_table_where>
                        <renderType>selectMultipleSideBySide</renderType>
                        <type>select</type>
                    </config>
                </TCEforms>
            </settings.person.persons>
            <settings.person.personsSelectbox>
                <TCEforms>
                    <label>Selectbox für Personen?</label>
                    <displayCond>FIELD:base.switchableControllerActions:=:Person->list</displayCond>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.person.personsSelectbox>
        </el>
    </ROOT>
</T3DataStructure>