<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
    <ROOT>
        <TCEforms>
            <sheetTitle>Person</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
            <settings.person.uid>
                <TCEforms>
                    <label>Zeige folgende Person</label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>tx_sportms_domain_model_person</allowed>
                        <size>1</size>
                        <maxItems>1</maxItems>
                        <minItems>0</minItems>
                        <show_thumbs>1</show_thumbs>
                    </config>
                </TCEforms>
            </settings.person.uid>
            <settings.person.playerNavigation.enabled>
                <TCEforms>
                    <label>Navigation für Einzelansichten?</label>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                    <onChange>reload</onChange>
                </TCEforms>
            </settings.person.playerNavigation.enabled>
            <settings.person.playerNavigation.views>
                <TCEforms>
                    <label>Zeige folgende Navigationselemente</label>
                    <displayCond>
                        <AND>
                            <numIndex index="1">FIELD:person.settings.person.playerNavigation.enabled:REQ:TRUE</numIndex>
                        </AND>
                    </displayCond>
                    <config>
                        <type>select</type>
                        <renderType>selectMultipleSideBySide</renderType>
                        <items type="array">
                            <numIndex index="1">
                                <numIndex index="0">Jerseys</numIndex>
                                <numIndex index="1">jerseys</numIndex>
                            </numIndex>
                            <numIndex index="2">
                                <numIndex index="0">Performance</numIndex>
                                <numIndex index="1">performance</numIndex>
                            </numIndex>
                            <numIndex index="3">
                                <numIndex index="0">Profile</numIndex>
                                <numIndex index="1">profile</numIndex>
                            </numIndex>
                        </items>
                    </config>
                </TCEforms>
            </settings.person.playerNavigation.views>
            <settings.person.persons>
                <TCEforms>
                    <label>Welche Personen sollen angezeigt werden?</label>
                    <config>
                        <foreign_table>tx_sportms_domain_model_person</foreign_table>
                        <foreign_table_where>ORDER BY lastname ASC, firstname ASC</foreign_table_where>
                        <renderType>selectMultipleSideBySide</renderType>
                        <type>select</type>
                    </config>
                </TCEforms>
            </settings.person.persons>
            <settings.person.personsSelectbox>
                <TCEforms>
                    <label>Selectbox für Personen?</label>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.person.personsSelectbox>
        </el>
    </ROOT>
</T3DataStructure>