<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
    <ROOT>
        <TCEforms>
            <sheetTitle>Verein</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
            <settings.club.uid>
                <TCEforms>
                    <label>Zeige folgenden Verein</label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>tx_sportms_domain_model_club</allowed>
                        <size>1</size>
                        <maxItems>1</maxItems>
                        <minItems>0</minItems>
                        <show_thumbs>1</show_thumbs>
                    </config>
                </TCEforms>
            </settings.club.uid>
            <settings.club.navigation.enabled>
                <TCEforms>
                    <label>Club-Navigation anzeigen?</label>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                    <onChange>reload</onChange>
                </TCEforms>
            </settings.club.navigation.enabled>
            <settings.club.selectbox.enabled>
                <TCEforms>
                    <label>Selectbox für Vereine?</label>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.club.selectbox.enabled>
            <settings.club.clubs>
                <TCEforms>
                    <label>Welche Vereine sollen berücksichtigt werden?</label>
                    <config>
                        <foreign_table>tx_sportms_domain_model_club</foreign_table>
                        <foreign_table_where>ORDER BY name ASC</foreign_table_where>
                        <renderType>selectMultipleSideBySide</renderType>
                        <type>select</type>
                    </config>
                </TCEforms>
            </settings.club.clubs>
        </el>
    </ROOT>
</T3DataStructure>