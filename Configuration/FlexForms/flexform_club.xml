<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
    <ROOT>
        <TCEforms>
            <sheetTitle>Verein</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
            <settings.club.uid>
                <TCEforms>
                    <label>Zeige folgenden Verein</label>
                    <displayCond>FIELD:base.switchableControllerActions:=:Club->show</displayCond>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>tx_clubms_domain_model_club</allowed>
                        <size>1</size>
                        <maxItems>1</maxItems>
                        <minItems>0</minItems>
                        <show_thumbs>1</show_thumbs>
                    </config>
                </TCEforms>
            </settings.club.uid>
            <settings.club.showViews>
                <TCEforms>
                    <label>Erlaube folgende Einzelansichten</label>
                    <displayCond>
                        <OR>
                            <numIndex index="1">FIELD:base.switchableControllerActions:=:Club->show</numIndex>
                            <numIndex index="2">FIELD:base.switchableControllerActions:=:ClubSection->show</numIndex>
                        </OR>
                    </displayCond>
                    <config>
                        <type>select</type>
                        <renderType>selectMultipleSideBySide</renderType>
                        <items type="array">
                            <numIndex index="0">
                                <numIndex index="0">Index</numIndex>
                                <numIndex index="1">index</numIndex>
                            </numIndex>
                            <numIndex index="2">
                                <numIndex index="0">Officials</numIndex>
                                <numIndex index="1">officials</numIndex>
                            </numIndex>
                            <numIndex index="3">
                                <numIndex index="0">Sections</numIndex>
                                <numIndex index="1">sections</numIndex>
                            </numIndex>
                        </items>
                    </config>
                </TCEforms>
            </settings.club.showViews>
            <settings.club.showNavigation.enabled>
                <TCEforms>
                    <label>Navigation für Einzelansichten?</label>
                    <displayCond>FIELD:base.switchableControllerActions:=:Club->show</displayCond>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                    <onChange>reload</onChange>
                </TCEforms>
            </settings.club.showNavigation.enabled>
            <settings.club.showNavigation.views>
                <TCEforms>
                    <label>Zeige folgende Navigationselemente</label>
                    <displayCond>
                        <AND>
                            <numIndex index="0">FIELD:base.switchableControllerActions:=:Club->show</numIndex>
                            <numIndex index="1">FIELD:club.settings.club.showNavigation.enabled:REQ:TRUE</numIndex>
                        </AND>
                    </displayCond>
                    <config>
                        <type>select</type>
                        <renderType>selectMultipleSideBySide</renderType>
                        <items type="array">
                            <numIndex index="0">
                                <numIndex index="0">Index</numIndex>
                                <numIndex index="1">index</numIndex>
                            </numIndex>
                            <numIndex index="2">
                                <numIndex index="0">Officials</numIndex>
                                <numIndex index="1">officials</numIndex>
                            </numIndex>
                            <numIndex index="3">
                                <numIndex index="0">Sections</numIndex>
                                <numIndex index="1">sections</numIndex>
                            </numIndex>
                        </items>
                    </config>
                </TCEforms>
            </settings.club.showNavigation.views>
            <settings.club.clubs>
                <TCEforms>
                    <label>Welche Vereine sollen angezeigt werden?</label>
                    <displayCond>
                        <OR>
                            <numIndex index="0">FIELD:base.switchableControllerActions:=:Club->list</numIndex>
                            <numIndex index="1">FIELD:base.switchableControllerActions:=:ClubSection->list</numIndex>
                            <numIndex index="2">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
                            <numIndex index="3">FIELD:base.switchableControllerActions:=:Team->list</numIndex>
                            <numIndex index="4">FIELD:base.switchableControllerActions:=:TeamSeason->list</numIndex>
                            <numIndex index="5">FIELD:base.switchableControllerActions:=:Venue->list</numIndex>
                        </OR>
                    </displayCond>
                    <config>
                        <foreign_table>tx_clubms_domain_model_club</foreign_table>
                        <foreign_table_where>ORDER BY name ASC</foreign_table_where>
                        <renderType>selectMultipleSideBySide</renderType>
                        <type>select</type>
                    </config>
                </TCEforms>
            </settings.club.clubs>
            <settings.club.clubsSelectbox>
                <TCEforms>
                    <label>Selectbox für Vereine?</label>
                    <displayCond>
                        <OR>
                            <numIndex index="0">FIELD:base.switchableControllerActions:=:Club->list</numIndex>
                            <numIndex index="1">FIELD:base.switchableControllerActions:=:ClubSection->list</numIndex>
                            <numIndex index="2">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
                            <numIndex index="3">FIELD:base.switchableControllerActions:=:Team->list</numIndex>
                            <numIndex index="4">FIELD:base.switchableControllerActions:=:TeamSeason->list</numIndex>
                            <numIndex index="5">FIELD:base.switchableControllerActions:=:Venue->list</numIndex>
                        </OR>
                    </displayCond>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.club.clubsSelectbox>
        </el>
    </ROOT>
</T3DataStructure>