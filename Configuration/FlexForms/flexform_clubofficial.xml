<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
    <ROOT>
        <TCEforms>
            <sheetTitle>Vereinsfunktion</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
            <settings.clubofficial.jobs>
                <TCEforms>
                    <label>Welche Funktionärstätigkeiten sollen angezeigt werden?</label>
                    <displayCond>
                        <AND>
                            <numIndex index="0">FIELD:base.switchableControllerActions:=:Club->show</numIndex>
                            <numIndex index="1">FIELD:club.settings.club.showViews:IN:officials</numIndex>
                        </AND>
                    </displayCond>
                    <config>
                        <foreign_table>tx_clubms_domain_model_clubofficialjob</foreign_table>
                        <foreign_table_where>ORDER BY label ASC</foreign_table_where>
                        <renderType>selectMultipleSideBySide</renderType>
                        <type>select</type>
                    </config>
                </TCEforms>
            </settings.clubofficial.jobs>
            <settings.clubofficial.jobsSelectbox>
                <TCEforms>
                    <label>Selectbox für Funktionärstätigkeiten?</label>
                    <displayCond>
                        <AND>
                            <numIndex index="0">FIELD:base.switchableControllerActions:=:Club->show</numIndex>
                            <numIndex index="1">FIELD:club.settings.club.showViews:IN:officials</numIndex>
                        </AND>
                    </displayCond>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.clubofficial.jobsSelectbox>
            <settings.clubofficial.currentOfficialsOnly>
                <TCEforms>
                    <label>Zeige nur die aktuellen Funktionäre</label>
                    <displayCond>
                        <AND>
                            <numIndex index="0">FIELD:base.switchableControllerActions:=:Club->show</numIndex>
                            <numIndex index="1">FIELD:club.settings.club.showViews:IN:officials</numIndex>
                        </AND>
                    </displayCond>
                    <config>
                        <default>0</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.clubofficial.currentOfficialsOnly>
        </el>
    </ROOT>
</T3DataStructure>