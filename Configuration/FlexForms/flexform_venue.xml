<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Sportstätte</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
			<settings.venue.uid>
				<TCEforms>
					<label>Zeige folgende Sportstätte</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Venue->show</displayCond>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tx_clubms_domain_model_venue</allowed>
						<size>1</size>
						<maxItems>1</maxItems>
						<minItems>0</minItems>
						<show_thumbs>1</show_thumbs>
					</config>
				</TCEforms>
			</settings.venue.uid>
			<settings.venue.showViews>
				<TCEforms>
					<label>Erlaube folgende Einzelansichten</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Venue->show</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="1">
								<numIndex index="0">Games</numIndex>
								<numIndex index="1">games</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.venue.showViews>
			<settings.venue.showNavigation.enabled>
				<TCEforms>
					<label>Navigation für Einzelansichten?</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Venue->show</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
					<onChange>reload</onChange>
				</TCEforms>
			</settings.venue.showNavigation.enabled>
			<settings.venue.showNavigation.views>
				<TCEforms>
					<label>Zeige folgende Navigationselemente</label>
					<displayCond>
						<AND>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Venue->show</numIndex>
							<numIndex index="1">FIELD:venue.settings.venue.showNavigation.enabled:REQ:TRUE</numIndex>
						</AND>
					</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="1">
								<numIndex index="0">Games</numIndex>
								<numIndex index="1">games</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.venue.showNavigation.views>
			<settings.venue.venues>
				<TCEforms>
					<label>Welche Sportstätten sollen angezeigt werden?</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Venue->list</displayCond>
					<config>
						<foreign_table>tx_clubms_domain_model_venue</foreign_table>
						<foreign_table_where>ORDER BY name ASC</foreign_table_where>
						<renderType>selectMultipleSideBySide</renderType>
						<type>select</type>
					</config>
				</TCEforms>
			</settings.venue.venues>
			<settings.venue.withClubOnly>
				<TCEforms>
					<label>Zeige nur Sportstätten von Vereinen</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Venue->list</displayCond>
					<config>
						<default>0</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.venue.withClubOnly>
		</el>
	</ROOT>
</T3DataStructure>