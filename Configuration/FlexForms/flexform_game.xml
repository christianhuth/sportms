<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Spiel</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
			<settings.game.uid>
				<TCEforms>
					<label>Zeige folgendes Spiel</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Game->showIndex</displayCond>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tx_sportms_domain_model_game</allowed>
						<size>1</size>
						<maxItems>1</maxItems>
						<minItems>0</minItems>
						<show_thumbs>1</show_thumbs>
					</config>
				</TCEforms>
			</settings.game.uid>
			<settings.game.showViews>
				<TCEforms>
					<label>Erlaube folgende Einzelansichten</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Game->showIndex</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">showIndex</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.game.showViews>
			<settings.game.showNavigation.enabled>
				<TCEforms>
					<label>Navigation f√ºr Einzelansichten?</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Game->showIndex</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
					<onChange>reload</onChange>
				</TCEforms>
			</settings.game.showNavigation.enabled>
			<settings.game.showNavigation.views>
				<TCEforms>
					<label>Zeige folgende Navigationselemente</label>
					<displayCond>
						<AND>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Game->showIndex</numIndex>
							<numIndex index="1">FIELD:game.settings.game.showNavigation.enabled:REQ:TRUE</numIndex>
						</AND>
					</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">showIndex</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.game.showNavigation.views>
		</el>
	</ROOT>
</T3DataStructure>