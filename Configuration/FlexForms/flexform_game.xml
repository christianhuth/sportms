<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Spiel</sheetTitle>
		</TCEforms>
		<displayCond>
			<OR>
				<numIndex index="0">FIELD:base.switchableControllerActions:=:Game->show</numIndex>
				<numIndex index="1">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
			</OR>
		</displayCond>
		<type>array</type>
		<el>
			<settings.game.showPid>
				<TCEforms>
					<label>Spiel (Einzelansicht)</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>pages</allowed>
						<size>1</size>
						<maxitems>1</maxitems>
						<minitems>0</minitems>
					</config>
				</TCEforms>
			</settings.game.showPid>
			<settings.game.listPid>
				<TCEforms>
					<label>Spiel (Listenansicht)</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>pages</allowed>
						<size>1</size>
						<maxitems>1</maxitems>
						<minitems>0</minitems>
					</config>
				</TCEforms>
			</settings.game.listPid>
			<settings.game.uid>
				<TCEforms>
					<label>Zeige folgendes Spiel</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tx_clubms_domain_model_game</allowed>
						<size>1</size>
						<maxItems>1</maxItems>
						<minItems>0</minItems>
						<show_thumbs>1</show_thumbs>
					</config>
				</TCEforms>
			</settings.game.uid>
		</el>
	</ROOT>
</T3DataStructure>