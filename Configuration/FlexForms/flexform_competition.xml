<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Wettbewerb</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
			<settings.competition.uid>
				<TCEforms>
					<label>Zeige folgenden Wettbewerb</label>
					<displayCond>
						<OR>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Competition->show</numIndex>
						</OR>
					</displayCond>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tx_sportms_domain_model_competition</allowed>
						<size>1</size>
						<maxItems>1</maxItems>
						<minItems>0</minItems>
						<show_thumbs>1</show_thumbs>
					</config>
				</TCEforms>
			</settings.competition.uid>
			<settings.competition.showViews>
				<TCEforms>
					<label>Erlaube folgende Einzelansichten</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Competition->show</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="1">
								<numIndex index="0">Games</numIndex>
								<numIndex index="1">games</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Teams</numIndex>
								<numIndex index="1">teams</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.competition.showViews>
			<settings.competition.showNavigation.enabled>
				<TCEforms>
					<label>Navigation für Einzelansichten?</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Competition->show</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
					<onChange>reload</onChange>
				</TCEforms>
			</settings.competition.showNavigation.enabled>
			<settings.competition.showNavigation.views>
				<TCEforms>
					<label>Zeige folgende Navigationselemente</label>
					<displayCond>
						<AND>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->show</numIndex>
							<numIndex index="1">FIELD:competition.settings.competition.showNavigation.enabled:REQ:TRUE</numIndex>
						</AND>
					</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="1">
								<numIndex index="0">Games</numIndex>
								<numIndex index="1">games</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Teams</numIndex>
								<numIndex index="1">teams</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.competition.showNavigation.views>
			<settings.competition.competitions>
				<TCEforms>
					<label>Welche Wettbewerbe sollen angezeigt werden?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Team->historyRecordGames</numIndex>
						</OR>
					</displayCond>
					<config>
						<foreign_table>tx_sportms_domain_model_competition</foreign_table>
						<foreign_table_where>ORDER BY label ASC</foreign_table_where>
						<renderType>selectMultipleSideBySide</renderType>
						<type>select</type>
					</config>
				</TCEforms>
			</settings.competition.competitions>
			<settings.competition.competitionsSelectbox>
				<TCEforms>
					<label>Selectbox für Wettbewerbe?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Team->historyRecordGames</numIndex>
						</OR>
					</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.competition.competitionsSelectbox>
			<settings.competitionType.competitionTypes>
				<TCEforms>
					<label>Welche Wettbewerbsarten sollen angezeigt werden?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<foreign_table>tx_sportms_domain_model_competitiontype</foreign_table>
						<foreign_table_where>ORDER BY label ASC</foreign_table_where>
						<renderType>selectMultipleSideBySide</renderType>
						<type>select</type>
					</config>
				</TCEforms>
			</settings.competitionType.competitionTypes>
			<settings.competitionType.competitionTypesSelectbox>
				<TCEforms>
					<label>Selectbox für Wettbewerbsarten?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.competitionType.competitionTypesSelectbox>
		</el>
	</ROOT>
</T3DataStructure>