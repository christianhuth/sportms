<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Wettbewerb</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
			<settings.competition.uid>
				<TCEforms>
					<label>Zeige folgenden Wettbewerb</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Competition->show</displayCond>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tx_clubms_domain_model_competition</allowed>
						<size>1</size>
						<maxItems>1</maxItems>
						<minItems>0</minItems>
						<show_thumbs>1</show_thumbs>
					</config>
				</TCEforms>
			</settings.competition.uid>
			<settings.competition.competitions>
				<TCEforms>
					<label>Welche Wettbewerbe sollen angezeigt werden?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:CompetitionSeason->list</numIndex>
							<numIndex index="2">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<foreign_table>tx_clubms_domain_model_competition</foreign_table>
						<foreign_table_where>ORDER BY name ASC</foreign_table_where>
						<renderType>selectMultipleSideBySide</renderType>
						<type>select</type>
					</config>
				</TCEforms>
			</settings.competition.competitions>
			<settings.competition.competitionsSelectbox>
				<TCEforms>
					<label>Selectbox für Wettbewerbe?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:CompetitionSeason->list</numIndex>
							<numIndex index="2">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.competition.competitionsSelectbox>
			<settings.competition.competitionTypes>
				<TCEforms>
					<label>Welche Wettbewerbsarten sollen angezeigt werden?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:CompetitionSeason->list</numIndex>
							<numIndex index="2">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<foreign_table>tx_clubms_domain_model_competitiontype</foreign_table>
						<foreign_table_where>ORDER BY label ASC</foreign_table_where>
						<renderType>selectMultipleSideBySide</renderType>
						<type>select</type>
					</config>
				</TCEforms>
			</settings.competition.competitionTypes>
			<settings.competition.competitionTypesSelectbox>
				<TCEforms>
					<label>Selectbox für Wettbewerbsarten?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Competition->list</numIndex>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:CompetitionSeason->list</numIndex>
							<numIndex index="2">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.competition.competitionTypesSelectbox>
		</el>
	</ROOT>
</T3DataStructure>