<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Team</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
			<settings.team.uid>
				<TCEforms>
					<label>Zeige folgendes Team</label>
					<displayCond>
						<OR>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Team->show</numIndex>
							<numIndex index="2">FIELD:base.switchableControllerActions:=:TeamSeason->show</numIndex>
						</OR>
					</displayCond>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>tx_clubms_domain_model_team</allowed>
						<size>1</size>
						<maxItems>1</maxItems>
						<minItems>0</minItems>
						<show_thumbs>1</show_thumbs>
					</config>
				</TCEforms>
			</settings.team.uid>
			<settings.team.showViews>
				<TCEforms>
					<label>Erlaube folgende Einzelansichten</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Team->show</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Competitions</numIndex>
								<numIndex index="1">competitions</numIndex>
							</numIndex>
							<numIndex index="3">
								<numIndex index="0">Games</numIndex>
								<numIndex index="1">games</numIndex>
							</numIndex>
							<numIndex index="4">
								<numIndex index="0">Stats</numIndex>
								<numIndex index="1">stats</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.team.showViews>
			<settings.team.showNavigation.enabled>
				<TCEforms>
					<label>Navigation für Einzelansichten?</label>
					<displayCond>FIELD:base.switchableControllerActions:=:Team->show</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
					<onChange>reload</onChange>
				</TCEforms>
			</settings.team.showNavigation.enabled>
			<settings.team.showNavigation.views>
				<TCEforms>
					<label>Zeige folgende Navigationselemente</label>
					<displayCond>
						<AND>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Team->show</numIndex>
							<numIndex index="1">FIELD:team.settings.team.showNavigation.enabled:REQ:TRUE</numIndex>
						</AND>
					</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Competitions</numIndex>
								<numIndex index="1">competitions</numIndex>
							</numIndex>
							<numIndex index="3">
								<numIndex index="0">Games</numIndex>
								<numIndex index="1">games</numIndex>
							</numIndex>
							<numIndex index="4">
								<numIndex index="0">Stats</numIndex>
								<numIndex index="1">stats</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.team.showNavigation.views>
			<settings.team.teams>
				<TCEforms>
					<label>Welche Teams sollen angezeigt werden?</label>
					<displayCond>
						<OR>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
							<numIndex index="2">FIELD:base.switchableControllerActions:=:Team->list</numIndex>
							<numIndex index="3">FIELD:base.switchableControllerActions:=:TeamSeason->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<foreign_table>tx_clubms_domain_model_team</foreign_table>
						<foreign_table_where>ORDER BY name ASC</foreign_table_where>
						<renderType>selectMultipleSideBySide</renderType>
						<type>select</type>
					</config>
				</TCEforms>
			</settings.team.teams>
			<settings.team.teamsSelectbox>
				<TCEforms>
					<label>Selectbox für Teams?</label>
					<displayCond>
						<OR>
							<numIndex index="1">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
							<numIndex index="2">FIELD:base.switchableControllerActions:=:Team->list</numIndex>
							<numIndex index="3">FIELD:base.switchableControllerActions:=:TeamSeason->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.team.teamsSelectbox>
		</el>
	</ROOT>
</T3DataStructure>