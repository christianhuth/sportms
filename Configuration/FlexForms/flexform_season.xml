<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
    <ROOT>
        <TCEforms>
            <sheetTitle>Saison</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
            <settings.season.uid>
                <TCEforms>
                    <label>Zeige folgende Saison</label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>tx_sportms_domain_model_season</allowed>
                        <size>1</size>
                        <maxItems>1</maxItems>
                        <minItems>0</minItems>
                        <show_thumbs>1</show_thumbs>
                    </config>
                </TCEforms>
            </settings.season.uid>
            <settings.season.selectbox.enabled>
                <TCEforms>
                    <label>Selectbox für Saisons anzeigen?</label>
                    <config>
                        <default>1</default>
                        <renderType>checkboxToggle</renderType>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.season.selectbox.enabled>
            <settings.season.seasons>
                <TCEforms>
                    <label>Welche Saisons sollen berücksichtigt werden?</label>
                    <config>
                        <foreign_table>tx_sportms_domain_model_season</foreign_table>
                        <foreign_table_where>ORDER BY tx_sportms_domain_model_season.label DESC</foreign_table_where>
                        <renderType>selectMultipleSideBySide</renderType>
                        <type>select</type>
                    </config>
                </TCEforms>
            </settings.season.seasons>
        </el>
    </ROOT>
</T3DataStructure>