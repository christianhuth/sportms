<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>Wettbewerbsinstanz</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
			<settings.competitionSeason.showViews>
				<TCEforms>
					<label>Erlaube folgende Einzelansichten</label>
					<displayCond>FIELD:base.switchableControllerActions:=:CompetitionSeason->show</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="1">
								<numIndex index="0">Games</numIndex>
								<numIndex index="1">games</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Teams</numIndex>
								<numIndex index="1">teams</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.competitionSeason.showViews>
			<settings.competitionSeason.showNavigation.enabled>
				<TCEforms>
					<label>Navigation für Einzelansichten?</label>
					<displayCond>FIELD:base.switchableControllerActions:=:CompetitionSeason->show</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
					<onChange>reload</onChange>
				</TCEforms>
			</settings.competitionSeason.showNavigation.enabled>
			<settings.competitionSeason.showNavigation.views>
				<TCEforms>
					<label>Zeige folgende Navigationselemente</label>
					<displayCond>
						<AND>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:ClubSection->show</numIndex>
							<numIndex index="1">FIELD:competitionSeason.settings.competitionSeason.showNavigation.enabled:REQ:TRUE</numIndex>
						</AND>
					</displayCond>
					<config>
						<type>select</type>
						<renderType>selectMultipleSideBySide</renderType>
						<items type="array">
							<numIndex index="0">
								<numIndex index="0">Index</numIndex>
								<numIndex index="1">index</numIndex>
							</numIndex>
							<numIndex index="1">
								<numIndex index="0">Games</numIndex>
								<numIndex index="1">games</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">Teams</numIndex>
								<numIndex index="1">teams</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.competitionSeason.showNavigation.views>
			<settings.competitionSeason.competitionSeasonGameDays>
				<TCEforms>
					<label>Welche Spieltage sollen angezeigt werden?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<foreign_table>tx_clubms_domain_model_competitionseasongameday</foreign_table>
						<foreign_table_where>ORDER BY label ASC</foreign_table_where>
						<renderType>selectMultipleSideBySide</renderType>
						<type>select</type>
					</config>
				</TCEforms>
			</settings.competitionSeason.competitionSeasonGameDays>
			<settings.competitionSeason.competitionSeasonGameDaysSelectbox>
				<TCEforms>
					<label>Selectbox für Spieltage?</label>
					<displayCond>
						<OR>
							<numIndex index="0">FIELD:base.switchableControllerActions:=:Game->list</numIndex>
						</OR>
					</displayCond>
					<config>
						<default>1</default>
						<renderType>checkboxToggle</renderType>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.competitionSeason.competitionSeasonGameDaysSelectbox>
		</el>
	</ROOT>
</T3DataStructure>